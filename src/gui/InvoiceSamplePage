package gui;

import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

public class InvoiceSamplePage {

    private JFrame frame;
    private JTable table;
    private JButton backButton;

    private int customerID;
    private String add;
    private String city;
    private String state;
    private int zip;
    private String phone;
    private String email;
    private int invoiceID;
    private String invoiceDate;
    private int amountDue;


    public InvoiceSamplePage() {
        // Create a JFrame
        frame = new JFrame("Invoice Sample");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(800, 400);
        frame.setLocationRelativeTo(null); // Center the window on the screen

        // Create a JPanel for the header
        JPanel headerPanel = new JPanel();
        JLabel headerLabel = new JLabel("Invoice");
        headerLabel.setFont(new Font("Arial", Font.BOLD, 18));
        headerPanel.add(headerLabel);

        // Create a JPanel for the main content
        JPanel mainPanel = new JPanel(new BorderLayout());

        // Create a JTable to display all invoice info
        ArrayList<String> vins = new ArrayList<>();

        // Add some data to the table
        ResultSet rs = dbM.query(String.format("SELECT VIN FROM Car WHERE invoiceID = %d;", InvoiceLookupPage.focusInvoice));
                try {
                    while(rs.next()) {
                         vin = rs.getString("VIN");
                        
                        vins.add(vin);
                        
                    }
                } catch (SQLException e1) {
                    e1.printStackTrace();
                } 
        
        JComboBox cars = new JComboBox(vins);
       
        JPanel backPanel = new JPanel();
        backButton = new JButton("Back");
        backButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
               this.dispose();
            }
        });
        backPanel.add(backButton);
        mainPanel.add(backPanel, BorderLayout.SOUTH);

        // Add the header and main content to the frame
        frame.add(headerPanel, BorderLayout.NORTH);
        frame.add(mainPanel, BorderLayout.CENTER);

        // Make the frame visible
        frame.setVisible(true);
    }
}
